# CADL3: Named Entity Recognition
import spacy
import pandas as pd

nlp = spacy.load("en_core_web_sm")

# Example dataset: job postings
text = """
Tesla is expanding its Gigafactory operations in Germany.
Apple unveiled its latest iPhone model at a launch event in California.
Researchers at Stanford University published a breakthrough paper on quantum computing.
"""


doc = nlp(text)

# Extract named entities
print("ðŸ”¹ Named Entities")
for ent in doc.ents:
    print(ent.text, ent.label_)

# Structured Information (Persons and Organizations)
entities = [(ent.text, ent.label_) for ent in doc.ents]
df = pd.DataFrame(entities, columns=["Entity", "Type"])
print("\nStructured Info:\n", df)
